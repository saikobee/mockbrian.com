---
interface Props {
  date: Date;
}

const { date } = Astro.props;
// Convert UTC date to equivalent date in local time
const newDate = new Date(0);
newDate.setHours(0, 0, 0, 0);
newDate.setFullYear(
  date.getUTCFullYear(),
  date.getUTCMonth(),
  date.getUTCDate()
);
const formatter = new Intl.DateTimeFormat("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<time datetime={date.toISOString()}>
  {formatter.format(newDate)}
</time>
