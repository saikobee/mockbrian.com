<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content="{{ eleventy.generator }}" />
{% if theme %}
<meta name="theme-color" content="{{ themes[theme]['color-background'] }}" />
<!-- <meta name="theme-color" content="#000000" /> -->
{% else %}
<meta
  name="theme-color"
  content="{{ colors.light['color-background'] }}"
  media="(prefers-color-scheme: light)"
/>
<meta
  name="theme-color"
  content="{{ colors.dark['color-background'] }}"
  media="(prefers-color-scheme: dark)"
/>
{% endif %}
