<h1>Posts</h1>

<div class="grid-2 box-grid">
  {% for post in collections.post | reverse %}
  <div>
    <span aria-hidden="true">&starf;&nbsp;</span>
    <a class="bit-link no-underline" href="{{ post.url }}"
      ><b>
        {{ post.data.title }}
      </b></a
    >
  </div>
  {% endfor %}
</div>

{{ content | safe }}
