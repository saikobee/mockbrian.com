---
layout: "layout-base"
tags: ["blog"]
---

<h1>Posts</h1>
<ul>
  {% for post in collections.post | reverse %}
  <li>
    <p>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <br />
      <span class="date">{{ post.date | formatDate('yyyy-mm-dd') }}</span>
    </p>
  </li>
  {% endfor %}
</ul>

{{ content | safe }}
