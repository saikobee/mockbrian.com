---
layout: "layout-base"
tags: ["blog"]
---

<main>
  <h1>Posts</h1>

  <div class="post-list">
    {% for post in collections.post | reverse %}
    <section class="post-list--post bit-card">
      <h2>
        <a class="bit-link no-underline" href="{{ post.url }}">
          {{ post.data.title }}
        </a>
      </h2>

      <p>
        {{ post.data.description }}
      </p>

      <time
        datetime="{{ post.date | formatDate('yyyy-mm-dd') }}"
        >{{ post.date | formatDate('yyyy mmmm d') }}</time
      >
    </section>
    {% endfor %}
  </div>

  {{ content | safe }}
</main>
