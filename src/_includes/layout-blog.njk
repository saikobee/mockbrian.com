<h1>Posts</h1>
<ul>
  {% for post in collections.post | reverse %}
  <li>
    <p>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <br />
      <time
        datetime="{{ post.date | formatDate('yyyy-mm-dd') }}"
        >{{ post.date | formatDate('yyyy-mm-dd') }}</time
      >
    </p>
  </li>
  {% endfor %}
</ul>

{{ content | safe }}
