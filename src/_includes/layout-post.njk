---
layout: "layout-base"
tags:
  - "post"
---

<main class="content">
  <h1 class="candy-bright">
    <a class="candy-link" href="">{{ title }}</a>
  </h1>

  <p class="post-date date">
    <time
      datetime="{{ page.date | formatDate('yyyy-mm-dd') }}"
      >{{ page.date | formatDate('yyyy mmmm d') }}</time
    >
  </p>

  <div class="candy-auto post">
    {{ content | safe }}
  </div>
</main>
