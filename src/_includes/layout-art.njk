---
layout: "layout-base"
css:
  - art
---

<article class="art">
  <h1 class="sage-bright">
    {{ title }}
  </h1>

  <p class="post-date date">
    <time
      datetime="{{ image.date | formatDate('yyyy-mm-dd') }}"
      >{{ image.date | formatDate('yyyy mmmm d') }}</time
    >
  </p>

  <div>
    {{ content | safe }}
  </div>
</article>
