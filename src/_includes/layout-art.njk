---
layout: "layout-base"
tags: ["art"]
---

<h1>Art</h1>

{{ content | safe }}

<div class="art-container">
  {% for img in art | reverse %}
  <figure>
    <div class="art-container--frame bit-box">
      <img
        src="{{ img.url }}"
        alt=""
        width="{{ img.width }}"
        height="{{ img.height }}"
        style="background-color: {{ img.color }};"
        loading="lazy"
      />
    </div>
    <figcaption class="text-center">
      <a class="bit-link" href="{{ img.url }}">{{ img.name }}</a>
      <span class="weight-normal">({{ img.date }})</span>
    </figcaption>
  </figure>
  {% endfor %}
</div>
