---
layout: "layout-base"
tags: ["art"]
---

<main>
  <h1>Art</h1>

  {{ content | safe }}

  <div class="art-container">
    {% for img in art | reverse %}
    <figure class="art-container--frame candy-card">
      <div class="candy-box flex">
        <img
          src="{{ img.url }}"
          alt=""
          width="{{ img.width }}"
          height="{{ img.height }}"
          style="background-color: {{ img.color }};"
          loading="lazy"
        />
      </div>
      <figcaption class="text-center">
        <a class="candy-link" href="{{ img.url }}">{{ img.name }}</a>
        <time
          class="weight-normal"
          datetime="{{ img.date | formatDate('yyyy-mm-dd') }}"
          >{{ img.date | formatDate('yyyy mmmm d') }}</time
        >
      </figcaption>
    </figure>
    {% endfor %}
  </div>
</main>
