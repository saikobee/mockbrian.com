<!DOCTYPE html>
<html
  lang="en"
  class="sage-scrollbar"
  data-tags="{{ (tags or []) | join(' ') }}"
>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="content-security-policy" content="{{ csp | safe }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content="{{ eleventy.generator }}" />
    <meta
      name="theme-color"
      content="{{ colors.light['color-header-background'] }}"
    />
    <meta
      name="theme-color"
      content="{{ colors.dark['color-header-background'] }}"
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="preload"
      as="font"
      crossorigin="anonymous"
      href="/fonts/nunito-variable.woff2"
    />
    <link
      rel="preload"
      as="font"
      crossorigin="anonymous"
      href="/fonts/nunito-italic-variable.woff2"
    />
    <link
      rel="preload"
      as="font"
      crossorigin="anonymous"
      href="/fonts/ultra-hi-gloss.woff2"
    />
    <meta name="author" content="wavebeem" />
    <meta name="description" content="{{ description }}" />
    <link
      rel="icon"
      sizes="16x16"
      href="/favicon.png?v={{ contentHashes.favicon }}"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/photo-180.webp?v={{ contentHashes.photo }}"
    />
    <link
      rel="alternate"
      type="application/atom+xml"
      href="{{ origin }}/feed.xml"
      title="wavebeem.com"
    />
    <meta
      name="og:image"
      content="{{ origin }}/og-image.png?v={{ contentHashes.ogImage }}"
    />
    <meta name="og:image:width" content="512" />
    <meta name="og:image:height" content="256" />
    <meta name="og:title" content="{{ title | formatTitle }}" />
    <meta name="og:description" content="{{ description }}" />
    <title>{{ title | formatTitle }}</title>
    <script src="/wavebeem-theme-select.js"></script>
    <script
      async
      defer
      data-domain="wavebeem.com"
      src="https://plausible.io/js/plausible.js"
    ></script>
    <link rel="stylesheet" media="screen" href="/main.css?t={{ dateNow }}" />
    {% for url in (css or []) %}
    <link
      rel="stylesheet"
      media="screen"
      href="/{{ url }}.css?t={{ dateNow }}"
    />
    {% endfor %}
    <link rel="stylesheet" media="print" href="/print.css?t={{ dateNow }}" />
  </head>
  <body>
    <header class="header screen-only">
      <div class="content-column">
        <div class="flex">
          <a href="/" class="logo sage-link">wavebeem </a>
        </div>
        <details class="hamburger">
          <summary>Menu</summary>
          <nav class="nav">
            {% for item in menu %}
            <a href="{{ item.url }}">{{ item.title }}</a>
            {% endfor %}
          </nav>
        </details>
      </div>
    </header>
    <div class="slime"></div>
    <main>
      <div class="content-column">{{ content | safe }}</div>
    </main>
    <footer class="footer screen-only sage-texture-striped">
      <div class="content-column flex flex-column gap3">
        <div>
          &copy; {{ "now" | formatDate("yyyy") }} Sage Fennel (<i
            class="sage-bright"
            >wavebeem</i
          >)
        </div>
        <wavebeem-theme-select>
          <select class="theme-select sage-button">
            <option value="" disabled>Select theme...</option>
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </wavebeem-theme-select>
      </div>
    </footer>
  </body>
</html>
