---json
{
  "permalink": "/feed.xml",
  "eleventyExcludeFromCollections": true,
  "eleventyComputed": {
    "metadata": {
      "base": "{{ origin }}"
    }
  },
  "metadata": {
    "title": "wavebeem.com",
    "description": "sage fennel's website",
    "language": "en",
    "author": {
      "name": "sage fennel",
      "email": "mail@wavebeem.com"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<feed
  xmlns="http://www.w3.org/2005/Atom"
  xml:lang="{{ metadata.language or page.lang }}"
>
  {%- set icon %}/favicon.ico?v={{ contentHashes.favicon }}{% endset %}
  {%- set logo %}/og-image.png?v={{ contentHashes.ogImage }}{% endset %}
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.description }}</subtitle>
  <link href="{{ permalink | htmlBaseUrl(metadata.base) }}" rel="self" />
  <link href="{{ metadata.base | addPathPrefixToFullUrl }}" rel="alternate" type="text/html" />
  <icon>{{ icon | htmlBaseUrl(metadata.base) }}</icon>
  <logo>{{ logo | htmlBaseUrl(metadata.base) }}</logo>
  <updated>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>{{ metadata.base | addPathPrefixToFullUrl }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
  </author>
  {%- for post in collections.posts | reverse %}
  {%- set absolutePostUrl %}{{ post.url | htmlBaseUrl(metadata.base)}}{% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}" />
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ post.content }}</content>
  </entry>
  {%- endfor %}
</feed>
