---
title: "Drafts"
layout: "layout-base"
permalink: "/drafts/"
---

<h1>Drafts</h1>

<h2>All drafts</h2>

<div class="post-list">
  {% for draft in collections.draft | reverse %}
  <section class="post-list--post sage-well">
    <h3>
      <a class="sage-link no-underline" href="{{ draft.url }}">
        {{ draft.data.title }}
      </a>
    </h3>

    <p>
      {{ draft.data.description }}
    </p>

    <time
      datetime="{{ draft.date | formatDate('yyyy-mm-dd') }}"
      >{{ draft.date | formatDate('yyyy mmmm d') }}</time
    >
  </section>
  {% endfor %}
</div>

{{ content | safe }}
